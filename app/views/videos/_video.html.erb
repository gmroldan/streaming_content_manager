<tr>
  <td><%= video.description %></td>
  <td><%= video.is_active %></td>
  <td><%= video.order %></td>
  <td>
    <%= link_to video, :class => "btn btn-info btn-circle" do %>
      <i class="fas fa-info-circle"></i>
    <% end %>
    <%= link_to edit_video_path(video), class: 'btn btn-warning btn-circle' do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-circle' do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>